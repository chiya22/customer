<!DOCTYPE html>
<html>

<head>
  <title>ユーザ管理（編集）</title>
  <%- include("../common/stylesheets.ejs") %>
</head>

<body>
  <%- include("../common/header.ejs") %>
  <% if (message && message.length !== 0) { %>
  <div class="alert alert-danger">
    <%= message %>
  </div>
  <% } %>
  <a href="/admin/users">戻る</a>
  <h1>ユーザ管理（編集）</h1>
  <form name="userform" method="POST">
    <% if (mode === 'insert') { %>
    ID:<input type="text" name="id" required>
    NAME:<input type="text" name="name" required>
    PASS:<input type="password" name="password" required>
    ROLE:<input type="text" name="role">
    <input type="button" id="btn_insert" value="登録">
    <% } else { %>
    ID:<%= user.id %>
    <input type="hidden" name="id" value="<%= user.id %>">
    NAME:<input type="text" name="name" value="<%= user.name %>" required>
    PASS:<input type="password" name="password" value="" required>
    ROLE:<input type="text" name="role" value="<%= user.role %>">
    <input type="hidden" name="ymd_start" value="<%= room.ymd_start %>">
    <input type="hidden" name="ymd_end" value="<%= room.ymd_end %>">
    <input type="button" id="btn_update" value="更新">
    <input type="button" id="btn_delete" value="削除">
    <% } %>
    <input type="hidden" id="field_mode">
  </form>
  <script>
    let insertbtn = document.getElementById("btn_insert");
    if (insertbtn) {
      insertbtn.addEventListener("click", function () {
        document.userform.action = "insert";
        document.userform.submit();
      })
    }
    let updatebtn = document.getElementById("btn_update");
    if (updatebtn) {
      updatebtn.addEventListener("click", function () {
        document.userform.action = "update";
        document.userform.submit();
      })
    }
    let deletebtn = document.getElementById("btn_delete");
    if (deletebtn) {
      deletebtn.addEventListener("click", function () {
        document.userform.action = "delete";
        document.userform.submit();
      })
    }
  </script>
</body>
<%- include("../common/javascripts.ejs") %>
</html>