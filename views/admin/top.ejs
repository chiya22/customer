<!DOCTYPE html>
<html>

<head>
  <title>まとめ情報</title>
  <%- include("../common/stylesheets.ejs") %>
</head>

<body>
  <%- include("../common/header.ejs", {current: "master" }); %>
    <div class="main">
      <div class="main__wrapper">
        <div class="recovery_area">
          <form method="POST" action="/admin/perinfo/recovery" name="perinfoform">
            <input type="text" placeholder="対象年月選択" name="yyyymm_target" class="recovery_input flatpickr1" value="">
            <input class="btn-base" type="submit" value="リカバリー" />
          </form>
        </div>
        <table class="kaigi__result__table">
          <tr>
            <th>年月</th>
            <th>全体</th>
            <th>4階・5階</th>
            <th>地下MTG</th>
            <th>地下PRJ</th>
          </tr>
          <% results.forEach( result => { %>
            <tr>
              <td>
                <div class="kaigi__result__ymd">
                <%= result.yyyymm.slice(0,4) + '年' + result.yyyymm.slice(-2) + '月' %>
                <br />
                <span class="kaigi__result__bikou">
                    <%= result.ymd_add.slice(0,4) + '年' + result.ymd_add.slice(4,6) + '月' + result.ymd_add.slice(-2)
                      +　'更新' %>
                </span>
                </div>
              </td>
              <td>
                <span class="kaigi__result__data">
                  <%= result.per_all_all + '%' %>
                  </span>
              </td>
              <td>
                <span class="kaigi__result__data">
                  <%= result.per_45_all + '%' %>
                </span>
              </td>
              <td>
                <span class="kaigi__result__data">
                  <%= result.per_mtg_all + '%' %>
                </span>
              </td>
              <td>
                <span class="kaigi__result__data">
                  <%= result.per_prj_all + '%' %>
                </span>
              </td>
            </tr>
            <% }) %>
        </table>
      </div>
      <!-- /.main__wrpper -->
    </div>
    <!-- /.main -->

</body>
<%- include("../common/javascripts.ejs") %>

</html>